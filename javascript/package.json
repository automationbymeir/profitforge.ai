{
  "name": "azure-functions-app",
  "version": "1.0.0",
  "description": "Azure Functions v4 app",
  "type": "module",
  "main": "dist/functions/*.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prestart": "npm run build",
    "start": "func start",
    "dev": "tsc --watch & func start & npx serve test -p 3000",
    "test": "npm run test:unit && npm run test:integration",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:watch": "vitest",
    "test:unit": "vitest run --config test/unit/setup/vitest.config.unit.ts",
    "test:unit:watch": "vitest --config test/unit/setup/vitest.config.unit.ts",
    "test:integration": "vitest run --config test/integration/setup/vitest.config.integration.ts",
    "test:integration:watch": "vitest --config test/integration/setup/vitest.config.integration.ts",
    "test:e2e": "vitest run --config test/e2e/setup/vitest.config.e2e.ts",
    "test:e2e:local": "FUNCTION_APP_URL=http://localhost:7071 vitest run --config test/e2e/setup/vitest.config.e2e.ts",
    "test:e2e:debug": "SKIP_E2E_CLEANUP=true vitest run --config test/e2e/setup/vitest.config.e2e.ts",
    "test:coverage": "vitest run --coverage",
    "db:test:up": "docker compose -f test/integration/setup/docker-compose.test.yml up -d",
    "db:test:down": "docker compose -f test/integration/setup/docker-compose.test.yml down -v",
    "db:test:logs": "docker compose -f test/integration/setup/docker-compose.test.yml logs -f",
    "clean": "tsx test/tools/cleanup.ts",
    "clean:blobs": "tsx test/tools/cleanup.ts blobs",
    "clean:db": "tsx test/tools/cleanup.ts db",
    "queue:view": "tsx test/tools/queue.ts view",
    "queue:purge": "tsx test/tools/queue.ts purge",
    "queue:test": "tsx test/tools/queue.ts test",
    "db:monitor": "tsx test/tools/dbMonitor.ts monitor",
    "db:logs": "tsx test/tools/dbMonitor.ts logs",
    "db:connections": "tsx test/tools/dbMonitor.ts connections",
    "db:slow-queries": "tsx test/tools/dbMonitor.ts slow-queries",
    "db:all": "npm run db:logs && echo '\n---\n' && npm run db:connections && echo '\n---\n' && npm run db:slow-queries"
  },
  "dependencies": {
    "@azure/ai-form-recognizer": "^4.0.0",
    "@azure/data-tables": "^13.3.2",
    "@azure/functions": "^4.0.0",
    "@azure/storage-blob": "^12.19.0",
    "@azure/storage-queue": "^12.29.0",
    "mssql": "^10.0.1",
    "openai": "^6.16.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/mssql": "^9.1.8",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^1.2.0",
    "supertest": "^6.3.4",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "vitest": "^1.2.0"
  }
}
